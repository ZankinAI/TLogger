<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.temperature.pages.TemperatureStatusFragment">


    <ImageView
        android:id="@+id/image_status"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/unknown_state"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/temp_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Текущий статус \n температурного логгера"
        android:textAlignment="center"
        android:textColor="#08adff"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_status"
        />

    <TextView
        android:id="@+id/temp_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Информация о работе \n температурного логгера"
        android:textAlignment="center"
        android:textColor="#08adff"
        android:textSize="18sp"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_status"
        />
    <TextView
        android:id="@+id/mime_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="t/demo.app.tlogger"
        android:textAlignment="center"
        android:textColor="#E8B410"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/system_info"
        />
    <TextView
        android:id="@+id/system_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SW:2043.19 API:6.1 APP:22"
        android:textAlignment="center"
        android:textColor="#E8B410"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/page"
        />

    <ImageView
        android:id="@+id/page"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:src="@drawable/page1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>