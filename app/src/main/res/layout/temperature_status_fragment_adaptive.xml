<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    tools:context=".ui.temperature.pages.TemperatureStatusFragment">

    <ImageView
        android:id="@+id/temp_status_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_bordered"
        />

    <TextView
        android:id="@+id/temp_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:textAlignment="center"
        android:textColor="#08adff"
        android:textSize="@dimen/ultra_big_text_size"
        android:textStyle="bold"
        android:text="Статус \n температурного логгера \n температурного логгера "
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        />



    <TextView
        android:id="@+id/temp_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:text="Информация о работе \n температурного логгера \n температурного логгера \n температурного логгера\n температурного логгера\n температурного логгера "
        android:textAlignment="center"
        android:textColor="#08adff"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="60dp">



        <ImageView
            android:id="@+id/page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/page1"
            />

    </LinearLayout>


</LinearLayout>