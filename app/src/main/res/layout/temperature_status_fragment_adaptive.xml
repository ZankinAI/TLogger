<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    tools:context=".ui.temperature.pages.TemperatureStatusFragment">

    <ImageView
        android:id="@+id/temp_status_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_bordered"
        />

    <TextView
        android:id="@+id/temp_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textAlignment="center"
        android:textColor="#08adff"
        android:textSize="@dimen/ultra_big_text_size"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />



    <TextView
        android:id="@+id/temp_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:text="Информация о работе \n температурного логгера"
        android:textAlignment="center"
        android:textColor="#08adff"
        android:textSize="@dimen/ultra_big_text_size"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginBottom="60dp">

        <TextView
            android:id="@+id/mime_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="t/demo.app.tlogger"
            android:textAlignment="center"
            android:textColor="#E8B410"
            android:textSize="@dimen/small_text_size"
            />
        <TextView
            android:id="@+id/system_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SW:2043.19 API:6.1 APP:22"
            android:textAlignment="center"
            android:textColor="#E8B410"
            android:textSize="@dimen/small_text_size"
            />

        <ImageView
            android:id="@+id/page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/page1"
            />

    </LinearLayout>


</LinearLayout>